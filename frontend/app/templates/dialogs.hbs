{{outlet}}
<div class="col-md-3">

</div>
<div class="col-md-6">
  <h3 class="text-center">Диалоги</h3>
  <ul class="list-group">
    {{#each model as |dialog|}}
      <div class="{{if dialog.unread 'private-dialog_unread'}}">
        {{#link-to 'dialog' dialog.id class='list-group-item'}}
          {{#link-to 'user' dialog.company.nickname}}{{dialog.company.publicNickname}}{{/link-to}}
          {{#if dialog.unread}}
            <span class="badge pull-right">{{dialog.unreadCount}}</span>
          {{/if}}
        {{/link-to}}
      </div>
    {{/each}}
  </ul>
</div>
