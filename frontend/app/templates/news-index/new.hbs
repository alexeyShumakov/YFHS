{{#if currentUser.isLogIn}}
  <form>
    <div class="form-group">
      <label for="news-title">Заголовок</label>
      {{input id='news-title' class='form-control' value=model.title}}
    </div>

    <div class="form-group">
      <label for="news-body">Новость</label>
    {{#yfhs-textarea text=model.body}}
      {{textarea value=model.body class='form-control' id='news-body'}}
    {{/yfhs-textarea}}
    </div>
    <button {{action 'save'}} class="btn btn-primary">опубликовать</button>
  </form>
  <div class="news-preview">
    {{markdown-onebox text=model.body placeholder=true}}
  </div>

{{else}}
  <div class="alert alert-success">
    Что бы писать новости нужно войти, или зарегистрироваться.
  </div>
{{/if}}

