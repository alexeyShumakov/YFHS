<p id="notice"><%= notice %></p>

<h1>Listing Cards</h1>

<table>
  <thead>
    <tr>
      <th>Card</th>
      <th>Name</th>
      <th>Card set</th>
      <th>Type</th>
      <th>Faction</th>
      <th>Rarity</th>
      <th>Cost</th>
      <th>Attack</th>
      <th>Health</th>
      <th>Text</th>
      <th>Flavor</th>
      <th>Artist</th>
      <th>Collectible</th>
      <th>Elite</th>
      <th>Img</th>
      <th>Img gold</th>
      <th>Locale</th>
      <th>Mechanics</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.card_id %></td>
        <td><%= card.name %></td>
        <td><%= card.card_set %></td>
        <td><%= card.type %></td>
        <td><%= card.faction %></td>
        <td><%= card.rarity %></td>
        <td><%= card.cost %></td>
        <td><%= card.attack %></td>
        <td><%= card.health %></td>
        <td><%= card.text %></td>
        <td><%= card.flavor %></td>
        <td><%= card.artist %></td>
        <td><%= card.collectible %></td>
        <td><%= card.elite %></td>
        <td><%= card.img_id %></td>
        <td><%= card.img_gold_id %></td>
        <td><%= card.locale %></td>
        <td><%= card.mechanics %></td>
        <td><%= link_to 'Show', card %></td>
        <td><%= link_to 'Edit', edit_card_path(card) %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Card', new_card_path %>
